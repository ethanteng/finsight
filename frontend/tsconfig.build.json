{
  "extends": "./tsconfig.json",
  "exclude": [
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "jest.config.js",
    "jest.setup.js"
  ],
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
